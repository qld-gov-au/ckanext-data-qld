{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "A reimplementation of the default CKAN dataset schema",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "data_qld_title",
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "notes",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "eg. Some useful notes about the data",
      "required": true
    },
    {
      "field_name": "tag_string",
      "label": "Tags",
      "preset": "tag_string_autocomplete",
      "form_placeholder": "eg. economy, mental health, government"
    },
    {
      "field_name": "license_id",
      "label": "License",
      "form_snippet": "license.html",
      "help_text": "License definitions and additional information can be found at http://opendefinition.org/",
      "required": true
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization"
    },
      {
      "field_name": "data_last_updated",
      "label": "Data last updated",
      "form_snippet": null,
      "display_snippet": "date.html",
      "create_validators": "ignore",
      "validators": "data_qld_data_last_updated ignore_empty"
    },
    {
      "field_name": "url",
      "label": "Source",
      "form_placeholder": "http://example.com/dataset.json",
      "display_property": "foaf:homepage",
      "display_snippet": "link.html"
    },
    {
      "field_name": "version",
      "label": "Version",
      "validators": "scheming_required unicode package_version_validator",
      "form_placeholder": "1.0",
      "required": true
    },
    {
      "field_name": "author",
      "label": "Author",
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:creator",
      "display_snippet": null,
      "form_snippet": null
    },
    {
      "field_name": "author_email",
      "label": "Email",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:creator",
      "display_snippet": "email.html",
      "display_email_name_field": "author",
      "required": true
    },
    {
      "field_name": "maintainer",
      "label": "Maintainer",
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:contributor",
      "display_snippet": null,
      "form_snippet": null
    },
    {
      "field_name": "maintainer_email",
      "label": "Maintainer Email",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:contributor",
      "display_email_name_field": "maintainer",
      "display_snippet": null,
      "form_snippet": null
    },
    {
      "field_name": "security_classification",
      "label": "Security Classification",
      "preset": "select",
      "required": true,
      "choices": [
        {
          "value": "PUBLIC",
          "label": "PUBLIC"
        },
        {
          "value": "UNCLASSIFIED",
          "label": "UNCLASSIFIED"
        }
      ]
    },
    {
      "field_name": "data_driven_application",
      "label": "Used in data driven application",
      "preset": "select",
      "required": true,
      "choices": [
        {
          "value": "NO",
          "label": "NO"
        },
        {
          "value": "YES",
          "label": "YES"
        }
      ],
      "help_text": "WARNING - This field identifies a critical dataset/resources used by external applications via API. To prevent accidental deletion, use caution when editing."
    },
    {
      "field_name": "update_frequency",
      "label": "Update Frequency",
      "preset": "select",
      "required": true,
      "choices": [
        {
          "value": "near-realtime",
          "label": "Near-realtime"
        },
        {
          "value": "hourly",
          "label": "Hourly"
        },
        {
          "value": "daily",
          "label": "Daily"
        },
        {
          "value": "weekly",
          "label": "Weekly"
        },
        {
          "value": "fortnightly",
          "label": "Fortnightly"
        },
        {
          "value": "monthly",
          "label": "Monthly"
        },
        {
          "value": "quarterly",
          "label": "Quarterly"
        },
        {
          "value": "half-yearly",
          "label": "Half-yearly"
        },
        {
          "value": "annually",
          "label": "Annually"
        },
        {
          "value": "non-regular",
          "label": "Non-regular"
        },
        {
          "value": "not-updated",
          "label": "Not updated"
        }
      ]
    },
    {
      "field_name": "next_update_due",
      "label": "Next update due",
      "form_snippet": "next_update_due.html",
      "display_snippet": "date.html",
      "validators": "data_qld_validate_next_update_due ignore_empty convert_to_json_if_date"
     },
     {
      "field_name": "de_identified_data",
      "label": "Contains de-identified data",
      "preset": "select",
      "required": true,
      "form_include_blank_choice": true,
      "help_text": "WARNING - When this field value is changed, all visible resources within this dataset should have their re-identification risk governance acknowledgement updated to the correct value.",
      "choices": [
        {
          "value": "NO",
          "label": "NO"
        },
        {
          "value": "YES",
          "label": "YES"
        }
      ]
    },
    {
      "field_name": "deletion_reason",
      "label": "Deletion reason",
      "form_snippet": null,
      "display_snippet": null,
      "create_validators": "ignore"
     }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "data_qld_resource_url_upload",
      "required": true
    },
    {
      "field_name": "nature_of_change",
      "label": "Nature of change to data",
      "form_include_blank_choice": true,
      "form_snippet": "nature_of_change.html",
      "display_snippet": null,
      "help_text": "This dataset’s ‘Next update due’ date is automatically updated when ‘Adding new time series data to the resource’ is selected. This date can be subsequently edited in the dataset ‘Manage’ page.",
      "validators": "data_qld_validate_nature_of_change_data ignore_empty scheming_choices",
      "create_validators": "ignore",
      "choices":[
        {
          "value": "add-new-time-series",
          "label": "Adding new time series data to the resource"
        },
        {
          "value": "edit-resource-with-no-new-data",
          "label": "Editing resource with no new time series data added"
        }
      ]
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "eg. January 2011 Gold Prices",
      "required": true
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "data_qld_select",
      "choices_helper": "data_qld_resource_formats",
      "required": true
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data",
      "required": true
    },
    {
      "field_name": "size",
      "label": "Size",
      "form_placeholder": "e.g. 1024",
      "validators": "data_qld_filesize_converter",
      "output_validators": "data_qld_filesize_formatter",
      "required": false
    },
    {
      "field_name": "schema",
      "label": "Schema",
      "preset": "resource_schema"
    },
    {
      "field_name": "validation_options",
      "label": "Validation options",
      "preset": "validation_options"
    },
    {
      "field_name": "validation_status",
      "label": "Validation status",
      "preset": "hidden_in_form"
    },
    {
      "field_name": "validation_timestamp",
      "label": "Validation timestamp",
      "preset": "hidden_in_form"
    },
    {
      "field_name": "resource_visibility",
      "label": "Re-identification risk governance acknowledgement/Resource visibility",
      "form_include_blank_choice": true,
      "validators": "data_qld_resource_visibility ignore_empty",
      "form_snippet": "resource_visibility.html",
      "help_text": "Datasets containing de-identified data will not be published and visible until a re-identification risk governance acknowledgement has been made.<br/><br/>This resource can be hidden pending an acknowledgement or otherwise hidden until suitable for publishing.",
      "choices": [
        {
          "value": "Resource visible and re-identification risk governance acknowledgement not required",
          "label": "Resource visible and re-identification risk governance acknowledgement not required"
        },
        {
          "value": "Appropriate steps have been taken to minimise personal information re-identification risk prior to publishing",
          "label": "Appropriate steps have been taken to minimise personal information re-identification risk prior to publishing"
        },
        {
          "value": "Resource NOT visible/Pending acknowledgement",
          "label": "Resource NOT visible/Pending acknowledgement"
        }
      ]
    },
    {
      "field_name": "last_modified",
      "display_snippet": null,
      "form_snippet": null,
      "validators": "data_qld_last_modified ignore_empty"
    }
  ]
}
